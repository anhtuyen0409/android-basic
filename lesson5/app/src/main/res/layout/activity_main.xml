<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn muốn ăn gì?"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/chkBunRieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bún riêu" />

    <CheckBox
        android:id="@+id/chkBunBo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bún bò" />

    <CheckBox
        android:id="@+id/chkPho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phở" />

    <Button
        android:onClick="xuLyDatMon"
        android:id="@+id/btnDatMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt món" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Các món đã chọn:"
        android:textColor="#E42929" />

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>